<div class="container">
    <div class="row">
        <div class="col-lg-12 center-align">
            <h1>Eat Da Burger!</h1>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 center-align">
            <h2>Order Up!</h2>
            <hr>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>

        <div class="col-md-6 center-align">
            <h2>That Was Yummy!</h2>
            <hr>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
            <h2>Add a Burger</h2>
            <form class="create form">
                <div class="form-group">
                    <label for="eat">What Burger Do You Want?</label>
                    <input type="text" id="eat" name="name">
                </div>

                <div class="form-group">
                    <label for="devoured">Devour it?</label><br>
                    <button type="button" name="devoured">
                </div>

                <button type="sumbit">Put in your Order</button>
            </form>
        </div>
    </div>

</div>